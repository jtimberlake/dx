{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "spaced-comment": 0,
    "no-use-before-define": 0,
    "react/jsx-filename-extension": 0,
    "prettier/prettier": ["error", {
      "printWidth": 100,
      "singleQuote": true
    }],
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }]
  }
}